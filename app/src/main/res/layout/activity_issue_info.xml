<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:theme="@style/MainToolbarTheme"
        >

        <ImageView
            android:id="@+id/backView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/issueTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Jet School"
            android:textSize="24sp"
            android:layout_marginLeft="32dp"
            android:layout_gravity="left"
            app:typeface="roboto_regular"
            android:textColor="#ffffff"
            />

        <ImageView
            android:id="@+id/favView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_border_black_24dp"
            android:layout_gravity="right"
            />

        <ImageView
            android:id="@+id/watchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_visibility_black_24dp"
            android:layout_gravity="right"
            android:layout_marginRight="32dp"
            />

    </android.support.v7.widget.Toolbar>

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/issueBodyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="16sp"
        app:typeface="roboto_regular"
        android:textColor="@color/defaultBlackColor"
        tools:text="KEKJKLJLKJkljlkjldkjvlkdjvklsdjvlkdsjvlksjdvlksjdvlksdjvklsdjvlksdjvlksdjvklsdjvlksdjvlksdjklsdjvklsdj"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/dividerLineColor"
        android:layout_margin="8dp"
        />

    <com.devspark.robototextview.widget.RobotoCheckedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typeface="roboto_regular"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:text="Comments:"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/issuesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

</LinearLayout>